{
  "name": "scribble",
  "private": true,
  "scripts": {
    "db:generate": "pnpm --filter @repo/db build",
    "build": "turbo run build",
    "dev": "pnpm db:generate && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@swc/helpers": "^0.5.18"
  }
}