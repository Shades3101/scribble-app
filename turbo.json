{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_HTTP_BACKEND",
    "NEXT_PUBLIC_WS_BACKEND"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "*.tsbuildinfo"
      ],
      "env": [
        "NODE_ENV"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ],
      "outputs": [
        "*.tsbuildinfo"
      ]
    },
    "@repo/db#build": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}